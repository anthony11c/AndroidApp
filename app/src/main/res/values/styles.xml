<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlueText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#04009a</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BlueTextOnly" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#04009a</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="customActivityAnimation" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>